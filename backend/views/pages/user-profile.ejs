<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="container mx-auto p-6">
    <div class="author-card d-flex align-items-center mb-3">
      <div class="flex-shrink-0">
        <img src="<%= user.profileImage %>" width="48" height="48" alt="<%= user.username %>" loading="lazy" class="rounded-circle">
      </div>
      <div class="flex-grow-1 ms-3 outer-fix">
        <h1 class="text-3xl font-bold"><%= user.username %></h1>
        <p class="text-gray-500"><%= user.email %></p>
      </div>
    </div>

    <div class="mt-6">
      <h2 class="text-2xl font-semibold mb-4">Favorite Lists</h2>
      <% if (user.favoriteList && user.favoriteList.length > 0) { %>
        <% user.favoriteList.forEach(list => { %>
          <div class="border-b border-gray-200 pb-2 mb-2">
            <h3 class="text-xl font-semibold"><%= list.fav_list_name %></h3>
            <ul class="list-disc pl-5">
              <% list.blogs.forEach(blog => { %>
                <li><a href="/blogs/<%= blog._id %>" class="text-blue-500"><%= blog.title %></a></li>
              <% }) %>
            </ul>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500">No favorite lists yet.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
